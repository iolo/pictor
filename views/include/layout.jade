doctype html
head
  meta(charset="utf-8")
  meta(name="viewport",content="width=device-width,initial-scale=1.0")
  if (typeof _baseHref_ !== 'undefined')
    base(href="#{_baseHref_}/")
  if (typeof pageTitle !== 'undefined')
    title Pictor - #{pageTitle}
  else
    title Pictor
  link(rel="stylesheet",href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css")
  link(rel="stylesheet",href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css")
  link(rel="shortcut icon",href="/favicon.ico",type="image/x-icon")
  link(rel="icon",href="/favicon.ico",type="image/x-icon")
  block head
  style.
    body { padding-top: 70px; }
  //\[if lt IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.2.0/respond.min.js"></script><![endif]
body
a(href="https://github.com/iolo/pictor")
  img(style="position:absolute;top:0;right:0;border:0;z-index:9999;",src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png",alt="Fork me on GitHub")
#wrap
  #header.navbar.navbar-fixed-top.navbar-inverse(role="navigation")
    .navbar-header
      button.navbar-toggle(data-toggle="collapse",data-target="#nav")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") Pictor
    #nav.navbar-collapse.collapse
      ul.nav.navbar-nav
        li: a(href="/about") About
        li: a(href="/docs") Docs
        li: a(href="/demo") Demo

  #content.container
    if (typeof error !== 'undefined')
      #errors.alert.alert-error #{error}
    block content

  #footer
    .container
      p.copyright.text-muted.text-center Copyright &copy; 2013 IoloTheBard Inc. All rights reserved.
  script(src="http://code.jquery.com/jquery-1.10.2.min.js")
  script(src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
  block foot
