.panel.panel-info
  .panel-heading
    h5.panel-title upload a single file with raw data
      .label.label-danger BUGGY!!!

  .panel-body
    form#uploadRawForm.form-horizontal(action="{{apiUrl}}/{{uploadRaw.id}}",method="put",target="responseView")
      .form-group
        label.control-label.col-md-3 file:
        .col-md-9
          input.form-control(type="file",name="file",required)
      .form-group
        label.control-label.col-md-3 id:
        .col-md-9
          input.form-control(type="text",name="id",required,ng-model="uploadRaw.id",ng-init="uploadRaw.id = 'foo.jpg'")
      .form-group
        label.control-label.col-md-3 prefix:
        .col-md-9
          input.form-control(type="text",name="prefix",value="",ng-disabled="uploadRaw.id != 'new'")
      .form-group
        .col-md-9.col-md-offset-3
          button.btn.btn-primary(type="submit",disabled) upload

    pre: code.
      curl -X PUT -d @foo.jpg {{apiUrl}}/foo.jpg
      curl -X PUT -d @foo.jpg {{apiUrl}}/upload?id=foo.jpg
      curl -X PUT -d @foo.jpg {{apiUrl}}/upload?id=new
      curl -X PUT -d @foo.jpg {{apiUrl}}/upload?id=new&prefix=test
